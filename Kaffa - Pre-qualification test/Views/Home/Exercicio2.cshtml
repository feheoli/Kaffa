<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Exercicio5Result", "Home", FormMethod.Post, new { id = "formCadastrar" }))
        {
            <br />
            @Html.AntiForgeryToken()
            <div class="card rounded-0 border-0 shadow p-4">
                <p class="lead font-weight-bold m-0"><i class="fas fa-info-circle mr-2"></i><b>Validação de CNPJ (Código de validação).</b></p>
                <p class="font-weight m-0">Insira um CNPJ válido</p>
                <hr class="mb-1" />
                @if (TempData["msgSuccess"] != null)
                {
                    <div id="mensagem" class="alert alert-success rounded-0"><i class="fas fa-check-circle mr-1"></i>@TempData["msgSuccess"]</div>
                }
                @if (TempData["msgFalha"] != null)
                {
                    <div id="mensagem" class="alert alert-danger rounded-0"><i class="fas fa-times-circle mb-0 mr-1"></i>@TempData["msgFalha"]</div>
                }
                <!-- ------------------------------------------------------------------------------------------- -->
            <div class="form-group px-5">

                <div class="card rounded-0 border-0 shadow p-4">
                    <div class="col">
                        <b>CNPJ:</b> <input type="text" class="form-control form-control-sm" placeholder = "Digite o CNPJ" autocomplete = "off" name="txtCNPJ" id="txtCNPJ" />
                    </div>
                    <p><small>*Formato: 00.000.000/0000-00</small></p>
                </div>
                <br />
                <div class="card rounded-0 border-0 shadow p-4">
                    <div class="col align-self-end">
                        <input type="submit" class="btn btn-sm btn-primary float-right mt-3 px-5" value="Validar" />
                    </div>
                </div>
            </div><!-- /.form-group -->
                <!-- ------------------------------------------------------------------------------------------- -->

            </div>
        }
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {



        });
    </script>
}
